{
  "name": "web3-skills",
  "version": "2.0.0",
  "description": "AI-powered blockchain development tools for Web3 and smart contract development",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:security": "npm audit && npm run test:security:contracts",
    "test:security:contracts": "slither plugins/smart-contract-dev/templates/ --filter-paths test/ --exclude naming-convention",
    "lint": "eslint . --ext .js,.ts,.json",
    "lint:fix": "eslint . --ext .js,.ts,.json --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "compile": "hardhat compile",
    "build": "npm run compile && npm run lint && npm run test",
    "dev": "nodemon --exec 'npm run build'",
    "prepare": "husky install",
    "release": "semantic-release",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "keywords": [
    "web3",
    "blockchain",
    "smart-contracts",
    "solidity",
    "ai",
    "claude",
    "defi",
    "nft",
    "ethereum",
    "development-tools",
    "security-audit",
    "gas-optimization"
  ],
  "author": {
    "name": "icehugh",
    "email": "icehugh@example.com",
    "url": "https://github.com/icehugh"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/icehugh/web3-skills.git"
  },
  "bugs": {
    "url": "https://github.com/icehugh/web3-skills/issues"
  },
  "homepage": "https://github.com/icehugh/web3-skills#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-json": "^3.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "semantic-release": "^21.1.1",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2",
    "vitepress": "^1.0.0-rc.20"
  },
  "dependencies": {
    "ethers": "^6.7.1",
    "dotenv": "^16.3.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "develop",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "files": [
    "plugins/",
    ".claude-plugin/",
    "README.md",
    "README.zh-CN.md",
    "LICENSE"
  ]
}